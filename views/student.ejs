<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>
<body>

  <h3>Welcome, ?(Students Data)</h3>
  <table border="1" cellpadding="5">
    <thead>
      <th>No</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Action</th>
    </thead>
    <% var i = 1
      data.forEach(r => { %>
    <tbody>
      <td><%= i %></td>
      <td><%= r.first_name %></td>
      <td><%= r.last_name %></td>
      <td><%= r.createdAt %></td>
      <td><%= r.updatedAt %></td>
      <td>
        <a href="/student/edit/<%= r.id %>">Edit</a>
        <a href="/student/delete/<%= r.id %>">Delete</a>
      </td>
    </tbody>
    <% i++ }) %>
  </table>

  <form class="" action="/student/edit/<%= data.id %>" method="post" style="margin-top:20px">
    <table>
      <tr>
        <td>First Name</td>
        <td>
          <input type="text" name="fn" value="">
        </td>
      </tr>
      <tr>
        <td>Last Name</td>
        <td>
          <input type="text" name="ln" value="">
        </td>
      </tr>
      <tr>
        <td>Email</td>
        <td>
          <input type="text" name="email" value="">
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <input type="submit" name="" value="Save">
        </td>
      </tr>
    </table>
  </form>

  <br>

  <a href="/"> << back </a>

</body>
</html>
